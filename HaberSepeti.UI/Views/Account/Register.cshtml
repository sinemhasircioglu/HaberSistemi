
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Haber Sepeti</title>
    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800,400italic%7cMontserrat:400,700" rel="stylesheet" type="text/css">
    <!-- Icons -->
    <link href="http://localhost:52601/Content/typicons.min.css" rel="stylesheet" />
    <!-- Bootstrap -->
    <link href="http://localhost:52601/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Template -->
    <link href="http://localhost:52601/Content/main.min.css" rel="stylesheet" />
    <!--[if lt IE 9]>
      <script src="~/Scripts/plugins/shiv.min.js"></script>
      <script src="~/Scripts/plugins/respond.min.js"></script>
      <script src="~/Scripts/plugins/excanvas.min.js"></script>
    <![endif]-->
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body class="login-page modal-open">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="modal fade in" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModal" aria-hidden="false" style="display: block;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">Kayıt olun</h4>
                    </div>
                    <div class="modal-body">
                        <form role="form">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Adınız Soyadınız" name="AdSoyad" required="" autofocus="">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Email" name="Email" required="" autofocus="">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="Sifre" placeholder="Şifre" required="">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Şifre tekrar" required="">
                            </div>
                            <div class="g-recaptcha" data-sitekey="6LfO72kUAAAAADLZnzoW3KWH23CqWwrKKFlRP3bx"></div>
                            <label>
                                <a href="/Account/Login" style="color:navy">Zaten bir hesabınız var mı? Giriş yapın</a>
                            </label>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kayıt</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- SCRIPTS -->
    <script src="http://localhost:52601/Scripts/plugins/jquery.min.js"></script>
    <script src="http://localhost:52601/Scripts/plugins/modernizr.min.js"></script>
    <script src="http://localhost:52601/Scripts/plugins/bootstrap.min.js"></script>
    <!-- Site -->
    <script src="http://localhost:52601/Scripts/main.js"></script>

    <!-- Mirrored from karlomikus.com/saltkin/login.html by HTTrack Website Copier/3.x [XR&CO'2014], Thu, 14 Apr 2016 14:52:57 GMT -->
    <div class="modal-backdrop fade in"></div>
</body>
</html>