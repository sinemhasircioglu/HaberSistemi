@model HaberSepeti.Data.Model.Kategori
@{
    ViewBag.Title = "Kategori Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Basic form -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label for="ParentId">Üst kategori</label>
                            @Html.DropDownListFor(Model => Model.Ad , new SelectList(ViewBag.Kategori,"Id","Ad"), ("Seçiniz") ,new { @class="form-control", id="ParentId"})
                        </div>
                        <div class="form-group">
                            <label for="kategoriAdi">Kategori Adı</label>
                            <input type="text" class="form-control" id="kategoriAdi" placeholder="Kategori Adı">
                        </div>
                        <div class="form-group">
                            <label for="kategoriUrl">Kategori Url</label>
                            <input type="text" class="form-control" id="kategoriUrl" placeholder="Kategori Url">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" checked id="kategoriAktifMi"> Aktif Mi
                            </label>
                        </div>
                        <a href="#" class="btn btn-default" onclick="KategoriEkle();">Ekle</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /Basic form -->
</div>
<script src="~/Scripts/Global.js"></script>