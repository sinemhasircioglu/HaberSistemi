<!DOCTYPE html>
<html lang="tr">
<head>
    <title>haber sitesi</title>

    <meta charset="utf-8">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet'>

    <!-- Css -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-icons.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- Favicons -->
    <link rel="shortcut icon" href="~/img/favicon.ico" />
    <link rel="apple-touch-icon" href="~/img/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/img/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/img/apple-touch-icon-114x114.png">

    <!-- Lazyload -->
    <script src="~/Scripts/lazysizes.min.js"></script>

    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>

<body class="bg-light">

    <!-- Preloader -->
    <div class="loader-mask">
        <div class="loader">
            <div></div>
        </div>
    </div>

    <!-- Bg Overlay -->
    <div class="content-overlay"></div>

    <main class="main oh" id="main">
        <!-- Navigation -->
        @Html.Partial("_Header")
        <!-- end navigation -->
        <!-- Featured Posts Grid -->
        @{ Html.RenderAction("Slider", "Default"); }
        <!-- end featured posts grid -->

        <div class="main-container container mt-40" id="main-container">

            <!-- Content -->
            <div class="row">

                <!-- Posts -->
                @RenderBody()
                <!-- end posts -->
                <!-- Sidebar -->
                @{ Html.RenderAction("Sidebar", "Default"); }
            </div>
            <!-- end content -->
        </div>
        <!-- end main container -->
        <!-- Footer -->
        @Html.Partial("_Footer")

        <div id="back-to-top">
            <a href="#top" aria-label="Go to top"><i class="ui-arrow-up"></i></a>
        </div>

    </main> <!-- end main-wrapper -->
    <!-- jQuery Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/easing.min.js"></script>
    <script src="~/Scripts/owl-carousel.min.js"></script>
    <script src="~/Scripts/twitterFetcher_min.js"></script>
    <script src="~/Scripts/jquery.newsTicker.min.js"></script>
    <script src="~/Scripts/modernizr.min.js"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
</html>