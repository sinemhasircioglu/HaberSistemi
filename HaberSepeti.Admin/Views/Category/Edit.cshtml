@model HaberSepeti.Data.Entities.Category
@{
    ViewBag.Title = "Kategori Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    <form role="form" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label for="ParentId">Üst Kategori</label>
                            @Html.DropDownListFor(x => x.ParentId, new SelectList(ViewBag.Category, "Id", "Name"), ("Seçiniz"), new { @class = "form-control", id = "ParentId" })
                        </div>
                        <div class="form-group">
                            <label for="kategoriAdi">Kategori Adı</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "Name", placeholder = "Kategori Adı" })
                        </div>
                        <div class="form-group">
                            <label for="kategoriUrl">Kategori Url</label>
                            @Html.TextBoxFor(x => x.URL, new { @class = "form-control", id = "URL", placeholder = "Kategori URL" })
                        </div>
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(x => x.IsActive, new { @checked = "checked", id = "IsActive" }) Aktif Mi
                            </label>
                        </div>
                        <button type="submit" class="btn btn-default">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
